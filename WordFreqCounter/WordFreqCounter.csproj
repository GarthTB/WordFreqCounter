<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <StartupObject>WordFreqCounter.Program</StartupObject>
    <Title>WordFreqCounter</Title>
    <ApplicationIcon>Icons\favicon.ico</ApplicationIcon>
    <PackageIcon>Icon.png</PackageIcon>
    <Company>Garth</Company>
    <Authors>Garth</Authors>
    <Version>0.3.2</Version>
    <Description>盲分词的高性能中文语料词频统计器。</Description>
    <Copyright>Copyright (c) 2024 Garth. All rights reserved.</Copyright>
    <PlatformTarget>x64</PlatformTarget>
    <NeutralLanguage>zh</NeutralLanguage>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/GarthTB/WordFreqCounter</RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>none</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Icons\favicon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="Icons\Icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
